{
    "type": "object",
    "required": [
        "repository"
    ],
    "properties": {
        "registry": {
            "type": "string"
        },
        "repository": {
            "type": "string"
        },
        "tag": {
            "type": "string"
        },
        "digest": {
            "type": "string"
        },
        "pullPolicy": {
            "type": "string",
            "enum": [
                "Always",
                "IfNotPresent",
                "Never"
            ]
        },
        "pullSecrets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
